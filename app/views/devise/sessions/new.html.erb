<div class="card border border-base-300 bg-base-100 max-w-xs mx-auto mt-5"> 
  <div class="card-body">
    <h2 class="card-title"><%= t(".sign_in") %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-control">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-control">
          <label class="cursor-pointer flex items-center gap-2 m-2">
            <%= f.check_box :remember_me, class: "checkbox" %>
            <span class="label-text"><%= f.label :remember_me %></span>
          </label>
        </div>
      <% end %>

      <div class="form-control">
        <%= f.submit t(".sign_in"), class: "btn btn-outline m-3" %>
      </div>
    <% end %>
    
      <%= render "devise/shared/links" %>
  </div>
</div>
