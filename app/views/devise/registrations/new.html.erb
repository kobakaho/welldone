<div class="container mx-auto flex flex-wrap justify-center items-center">
  <div class="card bg-base-100 shadow-md w-96 relative p-6 my-10">
  
    <div class="card-body space-y-4">
      <h2 class="card-title text-center"><%= t(".sign_up") %></h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div>
          <label class="input input-bordered flex items-center gap-2 mb-4">
            <%= f.text_field :username, placeholder: "ユーザーネーム" %>
          </label>
        </div>

        <div>
          <label class="input input-bordered validator flex items-center gap-2">
            <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <g stroke-linejoin="round" stroke-linecap="round" stroke-width="2.5" fill="none" stroke="currentColor">
                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </g>
            </svg>
            <%= f.email_field :email, placeholder: "mail@example.com", required: true, class: "input input-neutral"%>
          </label>
        </div>

        <div>
          <label class="input input-bordered validator flex items-center gap-2 mt-4">
            <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <g stroke-linejoin="round" stroke-linecap="round" stroke-width="2.5" fill="none" stroke="currentColor">
                <path d="M2.586 17.414A2 2 0 0 0 2 18.828V21a1 1 0 0 0 1 1h3a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h1a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h.172a2 2 0 0 0 1.414-.586l.814-.814a6.5 6.5 0 1 0-4-4z"></path>
                <circle cx="16.5" cy="7.5" r=".5" fill="currentColor"></circle>
              </g>
            </svg>
            <%= f.password_field :password, placeholder: "パスワード", required: true, 
                  minlength: 8, pattern: "(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{8,}", 
                  title: "8文字以上で、数字、小文字、大文字を含む必要があります", 
                  class: "input input-neutral"%>
          </label>
          <p class="validator-hint text-sm text-red-500 hidden">
          8文字以上で、以下を含む必要があります, including:
            <br/>少なくとも1つの数字
            <br/>少なくとも1つの小文字
            <br/>少なくとも1つの大文字
          </p>
        </div>

        <div>
          <label class="input input-bordered flex items-center gap-2 mt-4">
            <%= f.password_field :password_confirmation, placeholder: "パスワード確認用", autocomplete: "new-password" %>
          </label>
        </div>


        <div class="mt-6">
          <%= f.submit t(".sign_up"), class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="custom-alert mt-4 text-red-500 text-center">
          <span class="close cursor-pointer" onclick="this.parentElement.style.display='none';">&times;</span>
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="divider"></div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
