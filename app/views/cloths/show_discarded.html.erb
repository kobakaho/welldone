<div class="container mx-auto p-4 flex flex-wrap items-center justify-center min-h-screen">
  <div class="card bg-base-100 shadow-md w-96 relative p-6 my-6">

    <%= link_to discarded_cloths_path do %>
      <button class="btn btn-ghost btn-circle fa-solid fa-arrow-right fa-rotate-180 fa-2xl" style="color: #293454;" ></button>
    <% end %>

    <div class="flex justify-center gap-2">
      <div class="avatar">
        <div class="w-12 rounded-full">
          <%= image_tag @cloth.user.profile_image_url %>
        </div>
      </div>
      <p class="text-lg font-semibold"><%= @cloth.user.username %> さん</p>
    </div>
    <div class="divider"></div>
    
    <%= image_tag @cloth.image_file_url, class: "max-w-[300px] max-h-[250px] mx-auto rounded-md" %>
    <p class="text-xl font-bold text-center mt-3">「<%= @cloth.title %>」</p>

    <div class="flex justify-center mt-3">
      <div class="tooltip tooltip-bottom" data-tip="Xでシェア">
        <% prepare_meta_tags(@cloth) %>
        <% twitter_share_url = "https://twitter.com/intent/tweet?url=#{CGI.escape(show_discarded_cloth_url(@cloth))}&0A%0A&hashtags=well断" %>
        <%= link_to twitter_share_url, target: "_blank", rel: "noopener noreferrer" do %>
          <button class="btn btn-circle fa-brands fa-square-x-twitter fa-xl" style="color: #293454;"></button>
        <% end %>
      </div>
    </div>
  </div>
</div>