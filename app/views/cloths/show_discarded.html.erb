<turbo-frame id="modal">
  <dialog data-controller="modal" data-modal-target="dialog" 
    data-action="turbo:submit-end->modal#closeOnSubmit click->modal#backdropClick" id="modal_dialog" class="modal" open>
    <div class="modal-box">

    <div>
      <div class="flex justify-center gap-2">
        <div class="avatar">
          <div class="w-12 rounded-full">
            <%= image_tag @cloth.user.profile_image_url %>
          </div>
        </div>
        <p class="text-lg font-semibold"><%= @cloth.user.username %> さん</p>
      </div>
      <div class="divider"></div>
      
      <%= image_tag @cloth.image_file_url, class: "max-w-[300px] max-h-[250px] mx-auto rounded-md" %>
      <p class="text-xl text-center mt-2">「<%= @cloth.title %>」</p>

      <div class="flex justify-center mt-2">
       
          <% prepare_meta_tags(@cloth) %>
          <% twitter_share_url = "https://twitter.com/intent/tweet?url=#{CGI.escape(discarded_cloths_url)}&text=「#{CGI.escape(@cloth.title)}」%0A%0A&hashtags=well断" %>
          <%= link_to twitter_share_url, target: "_blank", rel: "noopener noreferrer" do %>
            <button class="btn btn-circle fa-brands fa-square-x-twitter fa-xl" style="color: #293454;"></button>
          <% end %>
      </div>
    </div>
        <#%= link_to "https://twitter.com/intent/tweet?text=「#{CGI.escape(@cloth.title)}」%0A&hashtags=well断&url=https://welldoneshari.com/cloths/discarded", target: "_blank", rel: "noopener noreferrer" do %>

    <form method="dialog" class="modal-backdrop"></form>
  </dialog>
</turbo-frame>