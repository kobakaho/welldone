<div class="container mx-auto px-4 min-h-screen">
  <%= link_to new_cloth_path, class: "btn btn-secondary flex items-center mt-10" do %>
    <img width="24" height="24" src="https://img.icons8.com/ios/50/add--v1.png" alt="add" />
    <span><%= I18n.t(".defaults.create") %></span>
  <% end %>

  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6 my-8">
    <% if @cloths.present? %>
      <% @cloths.each do |cloth| %>
        <%= link_to cloth_path(cloth), class: "block bg-base-100 shadow-xl rounded-lg overflow-hidden transition-transform transform hover:scale-105" do %>
          <div class="w-full aspect-square">
            <%= image_tag cloth.image_file.url, class: "w-full h-full object-cover" %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <p class="col-span-full text-center">まだ登録したアイテムはありません</p>
    <% end %>
  </div>     
   <%= paginate @cloths %>
</div>

