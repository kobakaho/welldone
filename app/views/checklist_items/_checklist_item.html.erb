<tr id="checklist_item-<%= checklist_item.id %>" class="border-b border-gray-200 p-4 flex justify-between items-center">
  <% if checklist_item.persisted? %>
    <td class="text-lg"><%= checklist_item.name %></td>
    <td>
      <%= link_to checklist_item_path(checklist_item), data: { turbo_method: :delete } do %>
        <i class="delete-checklist_item-link fa-solid fa-minus fa-xl" style="color: #293454;"></i>
      <% end %>
    </td>
  <% end %>
</tr>
