<% if @checklist_item.errors.present? %>
  <%= turbo_stream.replace "checklist_item-form" do %>
    <%= render 'checklist_items/form', checklist_item: @checklist_item, checklist: @checklist_item.checklist %>
  <% end %>
<% else %>
  <%= turbo_stream.prepend "table-checklist_item" do %>
    <%= render 'checklist_items/checklist_item', checklist_item: @checklist_item %>
  <% end %>
  <%= turbo_stream.replace "checklist_item-form" do %>
    <%= render 'checklist_items/form', checklist_item: ChecklistItem.new, checklist: @checklist_item.checklist %>
  <% end %>
<% end %>