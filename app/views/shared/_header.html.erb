<header class="navbar bg-base-300 shadow-md p-4">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-xl font-bold">
      <%= link_to I18n.t(".defaults.welldone"), root_path, class: "btn btn-ghost normal-case text-xl" %>
    </h1>
  </div>
  <div class="navbar-end flex items-center space-x-4">
    <%= link_to I18n.t(".header.closet"), cloths_path, class: "btn btn-outline btn-primary" %>
    <!-- お気に入り -->
    <%= link_to "お気に入り", favorites_cloths_path, class: "btn btn-outline btn-primary" %>

    <%= link_to I18n.t(".header.checklist"), checklists_path, class: "btn btn-outline btn-primary" %>
    <div class="flex-none ">           
      <% if current_user %>
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
            <div class="w-12 rounded-full ring ring-offset-base-100 ring-offset-2 bg bg-base-200 overflow-hidden">
              <%= image_tag current_user.profile_image_url %>
              </div>
            </div>
            <ul
              tabindex="0"
              class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1000] z-1 mt-3 w-52 p-2 shadow">
              <li><%= link_to I18n.t(".devise.shared.links.profile"), edit_user_registration_path %></li>
              <li><%= link_to I18n.t(".devise.shared.links.sign_out"), destroy_user_session_path, data: { turbo_method: :delete } %></li>
            </ul>
          <div>
        </div>
      <% end %>
    </div>
  </div>
</header>
