<header class="drawer">
  <input id="header-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar  -->
    <div class="navbar bg-base-300 w-full z-[50]">
      <div class="flex-none lg:hidden">
        <label for="header-drawer" aria-label="open sidebar" class="btn btn-square btn-ghost">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block h-6 w-6 stroke-current">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>
      </div>
      <div class="mx-2 flex-1 px-2">
        <%= link_to "/", class: "btn btn-ghost normal-case text-xl" do %>
          <%= image_tag "logo.png", width: 140, height: 20, class: "w-20" %>
        <% end %>
      </div>
      <div class="hidden flex-none lg:block">
        <ul class="menu menu-horizontal space-x-4">
          <!-- Navbar menu content here -->
          <li>
          <details>
            <summary><%= link_to I18n.t(".header.closet"), cloths_path, class: "btn btn-ghost" %></summary>
            <ul class="p-2">
              <li><%= link_to "わたしのお気に入り", favorites_cloths_path, class: "btn btn btn-ghost" %></li>
              <li><%= link_to "みんなの断捨離タイムライン", discarded_cloths_path, class: "btn btn btn-ghost" %></li>
            </ul>
          </details>
          </li>
          <li><%= link_to I18n.t(".header.checklist"), checklists_path, class: "btn btn-ghost" %></li>
          <% if current_user %>
            <div class="dropdown dropdown-end">
              <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
                <div class="w-12 rounded-full ring ring-offset-base-100 ring-offset-2 bg bg-base-200 overflow-hidden">
                  <%= image_tag current_user.profile_image_url %>
                </div>
              </div>
              <ul
                tabindex="0"
                class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[50] z-1 mt-3 w-52 p-2 shadow">
                <li><%= link_to I18n.t(".devise.shared.links.profile"), edit_user_registration_path %></li>
                <li><%= link_to I18n.t(".devise.shared.links.sign_out"), destroy_user_session_path, data: { turbo_method: :delete } %></li>
              </ul>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="drawer-side z-[60]">
    <label for="header-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu bg-base-200 min-h-full w-80 p-4 space-y-4">
      <!-- Sidebar content here -->
      <div class="dropdown dropdown-end">
        <% if current_user %>
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
            <div class="w-12 rounded-full ring ring-offset-base-100 ring-offset-2 bg bg-base-200 overflow-hidden">
              <%= image_tag current_user.profile_image_url %>
            </div>
          </div>
          <ul
            tabindex="0"
            class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1000] z-1 mt-3 w-52 p-2 shadow">
            <li><%= link_to I18n.t(".devise.shared.links.profile"), edit_user_registration_path %></li>
            <li><%= link_to I18n.t(".devise.shared.links.sign_out"), destroy_user_session_path, data: { turbo_method: :delete } %></li>
          </ul>
        <% end %>
      </div>
      <li>
      <details>
        <summary><%= link_to I18n.t(".header.closet"), cloths_path, class: "btn btn-ghost" %></summary>
        <ul class="p-2">
          <li><%= link_to "わたしのお気に入り", favorites_cloths_path, class: "btn btn btn-ghost" %></li>
          <li><%= link_to "みんなの断捨離タイムライン", discarded_cloths_path, class: "btn btn btn-ghost" %></li>
        </ul>
      </details>
      </li>
      <li><%= link_to I18n.t(".header.checklist"), checklists_path, class: "btn btn-ghost" %></li>
    </ul>
  </div>
</header>