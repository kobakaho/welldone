<div class="container mx-auto flex justify-center items-center min-h-screen">
  <div class="mx-auto bg-base-100 p-6 rounded-lg shadow-md w-full mt-6">
    <div class="flex justify-between items-center">

      <%= link_to checklists_path do %>
        <i class="fa-solid fa-arrow-right fa-rotate-180 fa-2xl" style="color: #293454;"></i>
      <% end %>
      <h1 class="text-2xl font-bold mb-4"><%= @checklist.title %></h2>

      <div class="mb-8">
        <ul class="list-disc list-inside">
          <% @checklist.default_items.each do |item| %>
            <li class="text-lg"><%= item.name %></li>
          <% end %>
          <% @checklist.original_items.each do |original_item| %>
            <li class="text-lg"><%= original_item.name %></li>
          <% end %>
        </ul>
      </div>
          <%= link_to new_checklist_item_path(@checklist) do %>
        <button class="btn btn-circle fa-solid fa-pen-to-square fa-lg" style="color: #293454;" ></button>
      <% end %>
    </div>
  </div>
</div>

